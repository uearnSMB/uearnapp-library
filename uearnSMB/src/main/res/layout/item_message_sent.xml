<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"

    android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_chat_sent"
        android:visibility="gone"
        android:elevation="5dp"
        android:id="@+id/ll_text"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_message_body"
            android:text="hello, hello!, hello, hello!, hello, hello!, hello, hello!"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/text_message_time"
            android:text="11:40 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_chat_sent"
        android:id="@+id/ll_image"
        android:visibility="gone"
        android:elevation="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_message_body"
            android:text="hello, hello!"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/app_logo"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/image_message_time"
            android:text="11:40 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_chat_sent"
        android:id="@+id/ll_audio"
        android:visibility="visible"
        android:elevation="5dp"
        android:orientation="vertical">
        <smarter.uearn.money.views.ChatAudioPlayer
            android:id="@+id/player"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            ></smarter.uearn.money.views.ChatAudioPlayer>

        <TextView
            android:id="@+id/audio_message_time"
            android:text="11:40 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>



</LinearLayout>