<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/tool_bar1"
            layout="@layout/training_header_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_batch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">
        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_weight="1.1">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_batch"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_weight="0.8">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="11sp"
                                    android:text="Batch"
                                    android:fontFamily="@font/poppins_bold"/>
                                <TextView
                                    android:id="@+id/tv_batch_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Batch ID :  B073020"
                                    android:fontFamily="@font/poppins_regular"/>
                                <TextView
                                    android:id="@+id/tv_days_training"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="14 Days Training"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="11sp"
                                    android:fontFamily="@font/poppins_bold"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1.1">

                                <LinearLayout
                                    android:id="@+id/ll_which_day_batch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_which_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_light"
                                        android:textSize="30sp"
                                        android:textColor="#ffffff"
                                        android:lineSpacingExtra="16sp"
                                        android:text="01"
                                        android:textAlignment="center"
                                        android:gravity="center|center_horizontal|center_vertical"
                                        android:background="@drawable/ic_day_background"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="13sp"
                                        android:textColor="#455c6e"
                                        android:lineSpacingExtra="7sp"
                                        android:text="Day"
                                        android:textStyle="normal"/>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.9">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/dotted_line"
                            android:layerType="software" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_batch_training_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_weight="0.9">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Batch Starts On"
                                    android:fontFamily="@font/poppins_regular"/>
                                <TextView
                                    android:id="@+id/tv_batch_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="9sp"
                                    android:layout_marginTop="5dp"
                                    android:text="07/18/20"
                                    android:fontFamily="@font/poppins_medium"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Batch Timing "
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tv_batch_timings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="9sp"
                                    android:text="11:00AM-12:00PM"
                                    android:layout_marginTop="5dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Batch Capacity"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:id="@+id/tv_batch_capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="9sp"
                                    android:text="30"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_weight="1.1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Batch Ends On"
                                    android:fontFamily="@font/poppins_regular"/>
                                <TextView
                                    android:id="@+id/tv_batch_end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="9sp"
                                    android:layout_marginTop="5dp"
                                    android:text="08/02/20"
                                    android:fontFamily="@font/poppins_medium"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Remaining Days"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tv_remaining_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="9sp"
                                    android:text="13 Days"
                                    android:layout_marginTop="5dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="13sp"
                                    android:textColor="#969696"
                                    android:lineSpacingExtra="7sp"
                                    android:text="Trainer"
                                    android:layout_marginTop="10dp"/>
                                <TextView
                                    android:id="@+id/tv_trainer_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="16sp"
                                    android:textColor="#455c6e"
                                    android:lineSpacingExtra="2sp"
                                    android:text="Ajay Kumar"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.9">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/dotted_line"
                            android:layerType="software" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_batch_share_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_current_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#455c6e"
                        android:lineSpacingExtra="10sp"
                        android:text="Today [18 July 2020]"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="#455c6e"
                        android:lineSpacingExtra="7sp"
                        android:text="Join the below link to attend the training"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_all_sides"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:textColor="#455c6e"
                            android:lineSpacingExtra="9sp"
                            android:text="meet.google.com/ddg-pxab-oyg"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/image_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_mail_batch"/>
                            <ImageView
                                android:id="@+id/image_share"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_share_1"/>
                            <ImageView
                                android:id="@+id/image_copy"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_copy_batch"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/open_link_msg"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_batch_not_started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rect_my_training"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:textColor="#1a2028"
                        android:lineSpacingExtra="6sp"
                        android:gravity="center_horizontal"
                        android:text="You are not have been allocated to a batch yet"
                        android:layout_margin="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:textColor="#c3c7cc"
                        android:lineSpacingExtra="-14sp"
                        android:gravity="center_horizontal"
                        android:text="Thank You"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="16sp"
                        android:textColor="#595d62"
                        android:lineSpacingExtra="6sp"
                        android:gravity="center_horizontal"
                        android:text="We will Update you soon"
                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>