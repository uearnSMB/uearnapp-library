<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="410dp"
                android:layout_height="390dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/earn_home_image" />




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textColor="#000000"
                android:layout_marginEnd="21dp"
                android:text="Sign in"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:text="Earn from Home"
                android:textColor="#dd374c"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/logo_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Get into a community of"
                android:textColor="#040109"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/logo_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_title2"
                android:layout_centerHorizontal="true"
                android:text="customer experience professionals"
                android:textColor="#040109"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/logo_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_content"
                android:layout_centerHorizontal="true"
                android:text="working from home"
                android:textColor="#040109"
                android:textSize="15sp" />


        </RelativeLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>