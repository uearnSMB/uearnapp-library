<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_all_sides"
    android:orientation="vertical"
    android:padding="@dimen/calendar_padding">

    <include
        layout="@layout/calendar_month_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_month_margin_bottom" />

    <include
        layout="@layout/calendar_week_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_month_margin_bottom" />

</LinearLayout>