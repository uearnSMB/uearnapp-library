<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/background_light"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/pending_engineer_button"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark"
        android:drawableTint="@color/white"
        android:drawableTop="@drawable/ic_show_chart_black_24dp"
        android:text="Pending"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="8dp" />

    <Button
        android:id="@+id/accept_engineer_button"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:background="#39B54A"
        android:drawableTint="@color/white"
        android:drawableTop="@drawable/ic_check_black_24dp"
        android:text="Accept"
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/accepted_engineer_button"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:background="#39B54A"
        android:drawableTint="@color/white"
        android:drawableTop="@drawable/ic_done_all_black_24dp"
        android:text="Accepted"
        android:textColor="@android:color/white"
        android:textSize="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/deleteAccept_engineer_button"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@android:color/holo_red_dark"
        android:drawableTint="@color/white"
        android:drawableTop="@drawable/ic_clear_black_24dp"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone" />

</LinearLayout>
