<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:height="3dp">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/smb_grey_26"
                android:centerY="0.75"
                android:endColor="@color/smb_grey_26"
                android:startColor="@color/smb_grey_26" />
        </shape>
    </item>
    <item android:id="@android:id/progress"
        android:height="3dp">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/smb_green"
                    android:startColor="@color/smb_green" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/smb_green"
                    android:startColor="@color/smb_green" />
            </shape>
        </clip>
    </item>

</layer-list>