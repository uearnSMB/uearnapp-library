<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item
            android:bottom="-1dp"
            android:left="-1dp"
            android:right="-1dp"
            android:top="0dp">

            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="#696969"
                    android:dashGap="3dp"
                    android:dashWidth="3dp" />

                <solid android:color="@android:color/transparent" />

                <padding
                    android:bottom="10dp"
                    android:left="20dp"
                    android:right="20dp"
                    android:top="10dp" />
            </shape>
        </item>
</layer-list>