<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle" >

<item>
    <shape>
        <!-- set the shadow color here -->
        <stroke
            android:width="3dp"
            android:color="#e0e0e0" />

        <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

        <padding
            android:bottom="-1dp"
            android:left="-1dp"
            android:right="-1dp"
            android:top="-1dp" />

        <corners android:radius="16dp" />
    </shape>
</item>

<!-- Background -->

<item>
    <shape>
        <padding
            android:bottom="6dp"
            android:left="6dp"
            android:right="6dp"
            android:top="6dp" />
        <solid android:color="@color/welcome_background_color" />
        <corners android:radius="16dp" />
    </shape>
</item>
</layer-list>