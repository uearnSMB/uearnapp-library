<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/smb_green"/>
            <stroke
                android:width="2dp"
                android:color="@color/smb_green"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/smb_green"
                android:startColor="@color/smb_green"/>
            <stroke
                android:width="4dp"
                android:color="@color/smb_green"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>
</selector>